{
  "name": "tt-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:rest": "turbo dev --filter=@repo/rest-service",
    "dev:menu": "turbo dev --filter=@repo/menu-service", 
    "dev:blog": "turbo dev --filter=@repo/blog-service",
    "lint": "turbo lint",
    "clean": "turbo clean"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "prettier": "^3.6.0",
    "turbo": "^2.5.4",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@9.7.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
